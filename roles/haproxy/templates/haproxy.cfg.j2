global
    log         127.0.0.1 local2

    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon

    stats socket /var/lib/haproxy/stats

defaults
    mode                    tcp
    log                     global
    retries                 3
    timeout connect         4s
    timeout client          1m
    timeout server          1m
    timeout check           10s
    maxconn                 3000


frontend http_frontend
bind *:80 #ssl crt /etc/haproxy/haproxy.pem
mode http
default_backend mytest1_web

backend mytest1_web
mode http
balance roundrobin
server mytestweb1 {{ ip_blitz_1 }}:80 # check ssl verify none
server mytestweb2 {{ ip_blitz_2 }}:443 # check ssl verify none

